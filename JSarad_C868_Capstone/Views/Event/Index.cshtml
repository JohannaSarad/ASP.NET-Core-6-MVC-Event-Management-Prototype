@model JSarad_C868_Capstone.ViewModels.EventListViewModel
@{
    ViewData["Title"] = "Index";
}



<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Event Information</h2>
        </div>
        <div class="col-6 text-end">
            <!--add button-->
            <a asp-controller="Event" asp-action="Add" class="btn btn-primary">
                @*
                selected plus icon from bootstrap icons copied and pasted
                Note that the icon style was first added to _layout, &nbsp is a space
                *@
                <i class="bi bi-plus-circle"></i> &nbsp; Add Event
            </a>
        </div>
    </div>
    <br /><br />

    <!--table row headers-->
    @*<div class="overflow-auto" style="min-height:200px;max-height:400px">*@
    <div class="outer-wrapper">
        <div class="tc">
            <div class="table-wrapper">
        
                <table class="table table-bordered border-dark table-light table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Event Type</th>
                            <th>Event Date</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Contact Name</th>
                            <th>Contact Phone</th>
                        </tr>
                    </thead>
                    <!--table body and population info-->
                    <tbody>
                        @if (Model.EventList != null)
                        {
                            int index = -1;
                            @foreach (var item in Model.EventList)
                            { 
                                
                                index++;
                                @*int index = Model.ToList().IndexOf(item);*@
                                <tr class="table-light selectable" controller="Event" Action="Selection" data-id="@item.EventId" data-index="@index">
                                    <td>@item.Type </td>
                                    <td>@item.StartDate.ToShortDateString()</td>
                                    <td>@item.StartDate.TimeOfDay</td>
                                    <td>@item.EndDate.TimeOfDay</td>
                                    <td>@item.ContactName</td>
                                    <td>@item.Phone</td>
                                </tr>
                                @*id = "row_@item.Id"*@
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="buttons">
            <!--modify buttons (w-100 splits cell, change to 75 when icons are added)-->
            <input asp-for="SelectedId" class="form-control selectedId"/>
            @*type="hidden"*@
           @* <input asp-for="SelectedName" class="form-control selectionResult" />*@
                   
            <div class="w-30 btn-group" role="group">
                <!--go back to bootstrap icons and copy and paste pencil square icon-->
                <a class="btn btn-primary mx-2" asp-controller="Event" asp-action="Details" >
                    <i class="bi bi-pencil-square"></i> Details
                </a>
                @*asp-route-id="@item.Id"*@
                <a class="btn btn-primary mx-2" asp-controller="Event" asp-action="Edit" >
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                @*asp-route-id="@item.Id"*@
                <!--button call to delete modal (js.delete.js)-->
                <a class="btn btn-danger delete" id="#delete" 
                   data-controller="Event" data-Action="DeletePOST"
                   data-body-message="Are you sure you want to delete this event?">
                    <i class="bi bi-trash"></i> Delete
                </a>
               @* data-id="@item.Id"*@
            </div>
        </div>
    </div>
</div>
