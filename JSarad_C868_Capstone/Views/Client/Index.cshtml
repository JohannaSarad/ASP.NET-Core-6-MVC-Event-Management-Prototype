@model IEnumerable<Client>
@{
    ViewData["Title"] = "Index";
}
<!--container with padding of 3-->
<div class="container p3">
    <!--row with padding top 4-->
    <div class="row pt-4">
        <!--by default bootstrap divides each row into 12 parts 6 is half-->
        <div class="col-6">
            <h2 class="text-primary">Client Information</h2>
        </div>
        <!--class text-end will move the button all the way to the right of the page-->
        <div class="col-6 text-end">
            <!--a button/link that goes to a new action method for creating a new category-->
            <a asp-controller="Client" asp-action="Add" class="btn btn-primary">
                @*
                selected plus icon from bootstrap icons copied and pasted
                Note that the icon style was first added to _layout, &nbsp is a space
                *@
                <i class="bi bi-plus-circle"></i> &nbsp; Add Client
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <!--table headers-->
                <th>
                    Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td width=15%>
                        @client.Name
                    </td>
                    <td width=15%>
                        @client.Phone
                    </td>
                    <td width=20%>
                        @client.Email
                    </td>
                    <td width=30%>
                        @client.Address
                    </td>
                    <!--edit button inside of cell-->
                    <td class="w-75 btn-group" role="group">
                        <!--go back to bootstrap icons and copy and paste pencil square icon-->
                        @*
                    navigate to the /Catergory/Edit; asp-route passes the Category id to the edit
                    action with binding, mx- is margin
                    *@
                        <a asp-controller="Client" asp-action="Edit" asp-route-id="@client.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>