@model IEnumerable<Client>
@*@{
    ViewData["Title"] = "Index";
}*@
<div id="PlaceHolderHere"></div>
<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Client Information</h2>
        </div>
       
        <div class="col-6 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="ajax-modal" data-target="#modifyClient"
                    data-controller="Client" data-action="Modify" data-modify-type="Add">
                Add Client
            </button>
            <!--button to Modify Client modal "Add" -->
            @*<a asp-controller="Client" asp-action="Add" class="btn btn-primary">
                @*
                selected plus icon from bootstrap icons copied and pasted
                Note that the icon style was first added to _layout, &nbsp is a space
                
                <i class="bi bi-plus-circle"></i> &nbsp; Add Client
              </a>*@
        </div>
    </div>
    <br /><br />
    
    <!--table row headers-->
    <div class="outer-wrapper">
        <div class="tc">
            <div class="table-wrapper">
                <table class="table table-bordered border-dark table-light table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <!--table body and population info-->
                    <tbody>
                        @*@if (Model.ClientList != null)
                        {*@
                            @*track index of IEnumerable*@    
                            @{int index = -1;
                            @foreach (var client in Model)
                            {
                                index++;
                                <tr id="row_@client.Id" class="table-light selectable" controller="Client" Action="Selection" data-id="@client.Id" data-index="@index">
                                    <td> @client.Id</td>
                                    <td >@client.Name</td>
                                    <td >@client.Phone</td>
                                    <td >@client.Email</td>
                                    <td >@client.Address</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <input id="selectedId" class="form-control" />
        <div class="buttons">
        <!--modify buttons (w-100 splits cell, FIX ME!!! change to 75 when icons are added)-->
            <div class="w-100 btn-group" role="group">
               @* <input asp-for="SelectedId" class="form-control selectedId" />*@
                <!--go back to bootstrap icons and copy and paste pencil square icon-->
                <button class="btn btn-primary" data-bs-toggle="ajax-modal" data-target="#modifyClient"
                data-controller="Client" data-action="Modify" data-modify-type="Edit">Edit</button>
                    
               @* <a class="btn btn-primary mx-2" asp-controller="Client" asp-action="Edit" asp-route-id="@Model.SelectedId">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>*@

                <!--button call to delete modal (js.delete.js)-->
                <a class="btn btn-danger delete" id="#delete" 
                   data-controller="Client" data-Action="DeletePOST"
                   data-body-message="Are you sure you want to delete this client?">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
         </div>
    </div>
</div>
        






                        
                    
    