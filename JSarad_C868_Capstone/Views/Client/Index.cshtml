@model IEnumerable<Client>
@{
    ViewData["Title"] = "Index";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Client Information</h2>
        </div>
        <!--class text-end will move the button all the way to the right of the page-->
        <div class="col-6 text-end">
            <!--add button-->
            <a asp-controller="Client" asp-action="Add" class="btn btn-primary">
                @*
                selected plus icon from bootstrap icons copied and pasted
                Note that the icon style was first added to _layout, &nbsp is a space
                *@
                <i class="bi bi-plus-circle"></i> &nbsp; Add Client
            </a>
        </div>
    </div>
    <br /><br />
    
    <!--table row headers-->
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
        </thead>
        <!--table body and population info-->
        <tbody>
       
            @foreach (var client in Model)
            {
                <tr id="row_@client.Id">
                    <td width=15%>@client.Name</td>
                    <td width=15%>@client.Phone</td>
                    <td width=20%>@client.Email</td>
                    <td width=30%>@client.Address</td>
                    
                    <!--modify buttons (w-100 splits cell, change to 75 when icons are added)-->
                    <td class="w-75 btn-group" role="group">
                        <!--go back to bootstrap icons and copy and paste pencil square icon-->

                        <a class="btn btn-primary mx-2" asp-controller="Client" asp-action="Edit" asp-route-id="@client.Id"> 
                           <i class="bi bi-pencil-square"></i> Edit</a>

                        <!--button call to delete modal (js.delete.js)-->
                        <a class="btn btn-danger delete" id="#delete" data-id="@client.Id"
                           data-controller="Client" data-Action="DeletePOST"
                           data-body-message="Are you sure you want to delete this client?">
                           <i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
        






                        
                    
    